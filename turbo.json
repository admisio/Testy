{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^db:generate", "^build"],
            "outputs": ["build/**", ".svelte-kit/**", ".vercel/**"]
        },
        "lint": {},
        "dev": {
            "dependsOn": ["^db:generate"],
            "cache": false,
            "persistent": true
        },
        "test": {
            "cache": false
        },
        "test:currentenv": {
            "cache": false
        },
        "migrate:postgres:currentenv": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        },
        "db:deploy": {
            "dependsOn": ["^db:generate"],
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "db:seed": {
            "cache": false
        }
    }
}
